import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt
from google.cloud import bigquery
from config import PROJECT_ID, BQ_SOURCE_TABLE

# Initialize Client
client = bigquery.Client(project=PROJECT_ID)

# -------------------------------------------------------------------------
# EVIDENCE FOR ML 3.4.3.2: Data Exploration
# Querying a sample to understand distribution and outliers
# -------------------------------------------------------------------------
query = f"""
    SELECT 
        trip_seconds, 
        trip_miles, 
        fare, 
        tips, 
        payment_type 
    FROM `{BQ_SOURCE_TABLE}`
    WHERE trip_seconds > 0 AND trip_miles > 0 AND fare > 0
    LIMIT 10000
"""

df = client.query(query).to_dataframe()

# 1. Visualizing Correlation
plt.figure(figsize=(10, 6))
sns.heatmap(df[['trip_seconds', 'trip_miles', 'fare', 'tips']].corr(), annot=True, cmap='coolwarm')
plt.title("Feature Correlation Matrix")
plt.show()
# Decision derived: High correlation between trip_miles and fare confirms it's a strong predictor.

# 2. Checking for Outliers
plt.figure(figsize=(10, 4))
sns.boxplot(x=df['fare'])
plt.title("Fare Distribution (Detecting Outliers)")
plt.show()
# Decision derived: Fares over $100 are rare outliers; we will filter these in preprocessing.